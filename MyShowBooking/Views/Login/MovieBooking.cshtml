@model MyShowBooking.Models.MovieBooking

@{
    ViewBag.Title = "MovieBooking";
}
@Styles.Render("~/Content/Booking.css")
@Html.Partial("_LogoutPartial")
<div class="main_first">
        <div class="main_second" >
            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                </ol>
                <!-- Wrapper for slides -->
                <div class="carousel-inner" role="listbox">
                    <div class="item active">
                        <img id="first " src="@Url.Content("~/Pictures/BATMAN-SUPERMAN.jpg")" alt="no image" width="1300" height="430">
                    </div>
                    <div class="item">
                        <img id="second" src="@Url.Content("~/Pictures/free-the-jungle-book-desktop-wallpaper-1-lOvg.jpg")" alt="Image" width="1300" height="430">
                    </div>
                    <div class="item">
                        <img id="third" src="@Url.Content("~/Pictures/the-jungle-book.jpg")" alt="Image" width="1300" height="430">
                    </div>
                </div>
                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    @using(Html.BeginForm("MovieBooking", "Login", FormMethod.Post))
    {
        <div class="main_third">
            <h4>Ticket Booking</h4>
            <div class="grid_3 grid_5">

                @Html.DropDownListFor(model => model.StateNameList, new SelectList(Model.StateNameList, "StateID", "StateName"), "Select Your State")
            </div>

            <div>
                @Html.DropDownListFor(model => model.CityNameList, new SelectList(Model.CityNameList, "CityID", "CityName"), "Select Your City")
            </div>
            
            <div>
                @Html.DropDownListFor(model => model.MovieNameList, new SelectList(Model.MovieNameList, "MovieID", "MovieName"), "Select Your Movie")
            </div>
            <div>
                @Html.DropDownListFor(model => model.DateList, new SelectList(Model.DateList, "ScheduleID", "Date"), "Select Your Date")
            </div>
            <div>
                @Html.DropDownListFor(model => model.TheaterList, new SelectList(Model.TheaterList, "TheaterID", "Name"), "Select Theater")
            </div>
            <div>
                @Html.DropDownListFor(model => model.TimeList, new SelectList(Model.TimeList, "ScheduleID", "StartTime"), "Select Time")
            </div>
            <div>
                @Html.DropDownListFor(model => model.SeatList, new SelectList(Model.SeatList, "SeatTypeID", "SeatName"), "Select Seats")
            </div>
            <div>
                @Html.DropDownListFor(model => model.Quantity, new SelectList(new[] { 1, 2, 3, 4, 5, 6 }), "Quantity")
            </div>
            <div>
                <input type="submit" value="Proceed to Booking" id="book"  />
            </div>
            
            </div>
        }






            </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
@Scripts.Render("~/Scripts/CityList.js")
}